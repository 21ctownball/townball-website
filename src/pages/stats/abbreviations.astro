---
import Default from '@layouts/Default.astro';
import { getAbbreviations } from '@scripts/data';

const abbreviations = await getAbbreviations();
---

<Default title="Statistics">
	<main>
		<h2>Abbreviations</h2>
		
		<hr style="margin: calc(var(--spacing) * 3) 0">
		
		<table>
			<thead>
				<tr>
					{Object.keys(abbreviations[0]).map((name) => (
						<th>{name}</th>
					))}
				</tr>
			</thead>
			<tbody>
				{abbreviations.map(({ abbreviation, title, description }) => (
					<tr>
						<td>{abbreviation}</td>
						<td>{title}</td>
						<td>{description}</td>
					</tr>
				))}
			</tbody>
		</table>
		
	</main>
</Default>